{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  // extends 영역 array 값 마지막에 "prettier" 을 추가 (formating 시 충돌 에러를 막아줌)
  "extends": ["airbnb", "prettier"], // npm install --save-dev eslint-config-prettier
  "plugins": ["import", "react-hooks"],
  "rules": {
    "jsx-a11y/label-has-associated-control": "off",
    "jsx-a11y/anchor-is-valid": "off",
    "no-console": "off",
    "no-underscore-dangle": "off",
    "react/forbid-prop-types": "off",
    "react/jsx-filename-extension": "off",
    "react/jsx-one-expression-per-line": "off",
    "object-curly-newline": "off",
    "linebreak-style": "off",
    "disable-next-line comma-dangle": "off",
    "consistent-return": "off",
    "implicit-arrow-linebreak": "off",
    "no-unused-vars": "off",
    "no-param-reassign": "off", // immer 사용 시 draft 때문에 "off"
    "react/prop-types": "off",
    "no-alert": "off",
    "react/jsx-props-no-spreading": "off" // {...props} problem in front/pages/_document.js
  }
}
/* npm install --save-dev */
// babel-eslint
// eslint
// eslint-config-airbnb
// eslint-plugin-import
// eslint-plugin-react-hooks
// eslint-plugin-jsx-a11y
